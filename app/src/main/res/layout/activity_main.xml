<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:padding="@dimen/padding_pantalla"
    android:weightSum="1"
    tools:context=".MainActivity">

    <Space
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_weight="0.25" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

        <Button
            android:id="@+id/unjugador"
            style="@style/boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one_player" />

        <RadioGroup
            android:id="@+id/configDif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/facil"
                style="@style/radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/easy" />

            <RadioButton
                android:id="@+id/normal"
                style="@style/radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/normal" />

            <RadioButton
                android:id="@+id/imposible"
                style="@style/radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/insane" />

        </RadioGroup>

        <Button
            android:id="@+id/dosjugadores"
            style="@style/boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/two_players" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_weight="0.3" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/a1"
            style="@style/casilla" />

        <ImageView
            android:id="@+id/a2"
            style="@style/casilla" />

        <ImageView
            android:id="@+id/a3"
            style="@style/casilla"
            android:src="@drawable/circulo" />

        <ImageView
            android:id="@+id/b1"
            style="@style/casilla" />

        <ImageView
            android:id="@+id/b2"
            style="@style/casilla"
            android:src="@drawable/circulo" />

        <ImageView
            android:id="@+id/b3"
            style="@style/casilla" />

        <ImageView
            android:id="@+id/c1"
            style="@style/casilla"
            android:src="@drawable/circulo" />

        <ImageView
            android:id="@+id/c2"
            style="@style/casilla"
            android:src="@drawable/equis" />

        <ImageView
            android:id="@+id/c3"
            style="@style/casilla"
            android:src="@drawable/equis" />

    </GridLayout>


</LinearLayout>